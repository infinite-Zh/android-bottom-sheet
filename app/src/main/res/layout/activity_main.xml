<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.infinite.bottomsheet.MainActivity">

    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/btn_bottom_sheet_in_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bottom_sheet_in_activity" />

    <Button
        android:id="@+id/btn_bottom_sheet_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_bottom_sheet_in_activity"
        android:layout_marginTop="30dp"
        android:text="bottom_sheet_fragment" />

</RelativeLayout>
